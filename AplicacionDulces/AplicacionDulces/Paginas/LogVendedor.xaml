<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionDulces.Paginas.LogVendedor">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>
        <Label Text="Inicio de Sesión de Vendedor" HorizontalOptions="Center" VerticalOptions="Center" FontSize="24" TextColor="Silver"></Label>
        <Label>   </Label>
        <Image Source="ic_action_vendedor.png" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="130" HeightRequest="130"></Image>
        <Label></Label>
        <ActivityIndicator x:Name="waitActivityIndicator"
          HorizontalOptions="Center" VerticalOptions="Center">
        </ActivityIndicator>
        <Label>Nombre de Usuario</Label>
        <Entry x:Name="UVendedor" ></Entry>
        <Label>Contraseña</Label>
        <Entry x:Name="CVendedor" IsPassword="True"></Entry>
        <Button x:Name="btnLoginVendedor" Clicked="btnLogin_Clicked" Text="Iniciar Sesión" BackgroundColor="#9CF0E3" TextColor="Navy" HorizontalOptions="FillAndExpand"></Button>
        <Label>   </Label>
        <Label>   </Label>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>