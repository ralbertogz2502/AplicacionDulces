<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionDulces.Paginas.VendedorPedido">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>
        <Label Text="Administración de Vendedores" HorizontalOptions="Center" VerticalOptions="Center" FontSize="24" TextColor="Silver"></Label>
        <Label>Pedidos a Entregar</Label>
        <Button x:Name="btnActualizar" Text="Actualizar Datos" BackgroundColor="Blue" TextColor="Silver" HorizontalOptions="FillAndExpand"></Button>
        <ListView x:Name="lstPedidos" RowHeight="60" >
        </ListView>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>